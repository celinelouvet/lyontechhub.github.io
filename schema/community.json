{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "image": { "type": "string" },
    "name": { "type": "string" },
    "shortDescription": { "type": "string" },
    "tags": {
      "type": "array",
      "items": [
        { "type": "string" }
      ],
      "uniqueItems": true
    },
    "patternsGoogleCalendar": {
      "type": "array",
      "items": [
        { "type": "string" }
      ],
      "minItems": 1,
      "uniqueItems": true
    },
    "socialLinks": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "icon": { "type": "string" },
            "tooltip": { "type": "string" },
            "url": { "type": "string" }
          },
          "required": [
            "icon",
            "tooltip",
            "url"
          ]
        }
      ],
      "uniqueItems": true
    },
    "slackChannels": {
      "type": "array",
      "items": [
        { "type": "string" }
      ],
      "uniqueItems": true
    }
  },
  "required": [
    "image",
    "name",
    "shortDescription",
    "tags",
    "socialLinks"
  ]
}
